# microsoft-edge --no-sandbox --no-first-run \
# --incognito \
# --kiosk "https://olimpoks.ente-ltd.ru/" --edge-kiosk-type=public-browsing --kiosk-idle-timeout-minutes=$IDLETIME

# --- start chromium
chrome-run.sh
